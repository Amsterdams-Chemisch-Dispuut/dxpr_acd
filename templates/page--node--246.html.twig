<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;600&family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">

<style>
  :root {
    /* --- CONFIGURATION --- */
    --num-cols: 3;
    --primary: #C88FEB;
    --bg-color: #212529;
    --text-color: #f8f9fa;
  }

  /* 1. LAYOUT WRAPPER */
  .borrel-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10000;
    background-color: var(--bg-color);
    color: var(--text-color);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  /* 2. HEADER */
  .borrel-header {
    background-color: var(--primary);
    padding: 0.8rem 2rem;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    z-index: 10;
    flex: 0 0 auto;
  }

  .borrel-header h1 {
    margin: 0;
    font-family: 'Oswald', sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 2.5rem; 
    color: #fff;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
  }

  /* 3. CONTENT CONTAINER */
  .borrel-content {
    flex: 1 1 auto;
    padding: 2rem 3rem;
    height: 100%;
    overflow: hidden;
  }

  /* * 4. THE GRID SYSTEM (Strict)
   * This targets the generic wrapper Drupal puts around the body field.
   */
  .borrel-content .field--name-body {
    display: grid;
    /* Uses the variable defined at the top */
    grid-template-columns: repeat(var(--num-cols), 1fr); 
    gap: 4rem; 
    height: 100%;
    align-content: start; 
  }

  /* --- GHOST COLUMN FIX --- */
  /* This forces the grid to IGNORE any text, <p>, or <br> that is not a <div> */
  .borrel-content .field--name-body > :not(div) {
    display: none !important;
  }

  /* 5. ITEM STYLING */
  
  /* Header (H3) inside a column div */
  .borrel-content div h3 {
    font-family: 'Oswald', sans-serif;
    color: var(--primary);
    text-transform: uppercase;
    font-size: 1.6rem;
    margin-bottom: 1rem;
    margin-top: 1.5rem;
    border-bottom: 2px solid rgba(255,255,255,0.1);
    padding-bottom: 0.2rem;
  }
  
  /* First header shouldn't have top margin */
  .borrel-content div h3:first-child {
    margin-top: 0;
  }

  /* The List Items */
  .borrel-content div p {
    font-family: 'Roboto Slab', serif;
    font-size: 1.35rem; 
    margin-bottom: 0.5rem;
    line-height: 1.4;
    
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    
    border-bottom: 1px dashed rgba(255,255,255,0.2);
  }

  /* The Price */
  .borrel-content div strong {
    font-family: 'Oswald', sans-serif;
    font-weight: 500;
    color: var(--primary);
    font-size: 1.5rem; 
    margin-left: 1rem;
  }
  
  #toolbar-bar, .toolbar-tray { display: none !important; }
</style>

<div class="borrel-wrapper">
  <header class="borrel-header">
    <h1>{{ node.label }}</h1>
  </header>

  <div class="borrel-content">
     {{ page.content }}
  </div>
</div>