{% for item in items %}
  {% if item.content['#url'] is defined and item.content['#url'] %}
  <script type="text/javascript" src="https://pretix.acdweb.nl/widget/v2.en.js" async crossorigin></script>
  <pretix-widget event="{{ item.content['#url'] }}"></pretix-widget>
  <noscript>
    <div class="pretix-widget">
      <div class="pretix-widget-info-message">
        JavaScript is disabled in your browser. To access our ticket shop without JavaScript, please 
        <a target="_blank" rel="noopener" href="{{ item.content['#url'] }}">click here</a>.
      </div>
    </div>
  </noscript>
  {% endif %}
{% endfor %}